<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <!-- Item 1 -->
        <LinearLayout
            android:id="@+id/itemll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            android:elevation="10dp"
            android:background="@android:color/transparent"
            >

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/bgcircle_bg">



            <!-- Item Image -->
            <ImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/crab64px"
                android:background="@drawable/bgcircle_bg"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Item From -->
                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="4dp"
                    android:gravity="start|center_horizontal"
                    android:text="Spacy fresh crab"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />



                    <!-- Item Calories -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:gravity="start"
                        android:padding="2dp"
                        android:layout_margin="4dp"
                        android:text="Waraenk kita"
                        android:textColor="@color/iconColor"
                        android:textSize="18sp"
                        android:textStyle="bold"/>


            </LinearLayout>

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:src="@drawable/add24pxwhite"
                android:tint="@color/bgcolor"
                tools:ignore="UseAppTint" />


        </LinearLayout>


</LinearLayout>